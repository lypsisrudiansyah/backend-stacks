{
    "compilerOptions": {
        // Enable latest features
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "jsx": "react-jsx",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": ".",
        // Bundler mode
        "moduleResolution": "bundler",
        "verbatimModuleSyntax": true,
        "noEmit": false,
        // Recommended
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        // strict flags default -> disabled
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noPropertyAccessFromIndexSignature": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}