{
    "name": "GoLang",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            // Set VARIANT to choose the Go version you want (e.g. 1, 1.18, 1.25, 1.24).
            //  Add -bullseye or -buster if you need to lock onto a specific Debian release.
            //  If youâ€™re on Apple Silicon (arm64), the -bullseye variants are recommended.
            "VARIANT": "1.25",
            // Options
            "NODE_VERSION": "lts/*"
        }
    },
    "runArgs": [
        "seccomp=unconfined",
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "--env",
        "DEBUG=true"
    ],
    "customizations": {
        "codespaces": {
            "openFiles": [
                "README.md"
            ]
        },
        // * Set *default* container specific settings.json values on container create.
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash",
            "go.toolsManagement.checkForUpdates": "local",
            "go.useLanguageServer": true,
            "go.gopath": "/go"
        },
        "extensions": [
            "streetsidesoftware.code-spell-checker",
            "fill-labs.dependi",
            "golang.Go",
            "golang.go",
            "christian-kohler.npm-intellisense",
            "rust-lang.rust-analyzer"
        ]
    }
}