{
    "name": "GoLang",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            // Set VARIANT to choose the Go version you want (e.g. 1, 1.18, 1.25, 1.24).
            //  Add -bullseye or -buster if you need to lock onto a specific Debian release.
            //  If youâ€™re on Apple Silicon (arm64), the -bullseye variants are recommended.
            "VARIANT": "1.23",
            // Options
            "NODE_VERSION": "lts/*"
        }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "customizations": {
        "codespaces": {
            "openFiles": [
                "README.md"
            ]
        },
        // * Set *default* container specific settings.json values on container create.
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash",
            "go.toolsManagement.checkForUpdates": "local",
            "go.useLanguageServer": true,
            "go.gopath": "/go"
        },
        "extensions": [
            "streetsidesoftware.code-spell-checker",
            "fill-labs.dependi",
            "golang.Go",
            "golang.go",
            "christian-kohler.npm-intellisense",
            "rust-lang.rust-analyzer"
        ]
    },
    // 'forwardPorts' lets you expose ports from inside the container to your host machine.
    // Example: "forwardPorts": [8080, 3000]
    // 'postCreateCommand' runs after the container is fully set up.
    // Example: "postCreateCommand": "go version"
    // Remove the user property below if you want to attach as root. Docs: https://aka.ms/vscode-remote/containers/non-root
    "onCreateCommand": "printf 'source $HOME/.cargo/env\n' >> ~/.bashrc && printf 'PS1=\"$ \"\n' >> ~/.bashrc",
    "remoteUser": "vscode"
}